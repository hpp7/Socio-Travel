<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/rl2"
        android:padding="10dp" 
        android:background="@drawable/backgr">
                   
        <TextView
            android:id="@+id/rc_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
    		android:gravity="center"
	        android:textSize="20sp"
	        android:textStyle="bold"
            android:text="Here are your ride details:" />
        
        
        <ImageView
            android:id="@+id/imageView1"
            android:scaleType="fitXY"
            android:layout_width="80dip" 
            android:layout_height="80dip"
            android:layout_below="@+id/rc_details"
    		android:layout_centerHorizontal="true"
            android:layout_marginTop="14dp"
            android:src="@drawable/auto2"
            android:visibility="gone" />
        
        <ImageView
            android:id="@+id/imageView2"
            android:scaleType="fitXY"
            android:layout_width="80dip" 
            android:layout_height="80dip"
            android:layout_below="@+id/rc_details"
    		android:layout_centerHorizontal="true"
            android:layout_marginTop="14dp"
            android:src="@drawable/taxi2"
            android:visibility="gone" />
        
        <ImageView
            android:id="@+id/imageView3"
            android:scaleType="fitXY"
            android:layout_width="80dip" 
            android:layout_height="80dip"
            android:layout_below="@+id/rc_details"
    		android:layout_centerHorizontal="true"
            android:layout_marginTop="14dp"
            android:src="@drawable/maruti2"
            android:visibility="gone" />
        
        <ImageView
            android:id="@+id/bar1"
            android:layout_width="fill_parent"
            android:layout_height="5dip"
            android:layout_marginTop="130dp"
            android:layout_gravity="center_horizontal"
    		android:background="@drawable/bar" />
       
        <TextView
            android:id="@+id/rc_n"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bar1"
            android:layout_centerHorizontal="true"
            android:textSize="18sp"
            android:layout_marginTop="5dp"
            android:text="Host Details: " />
        
         <TextView
             android:id="@+id/rc_name"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentLeft="true"
             android:layout_below="@+id/rc_n"
             android:layout_toLeftOf="@+id/pic"
             android:ems="10"
             android:maxLines="5"
             android:singleLine="false"
             android:textSize="20sp"
            android:layout_marginTop="10dp"
             android:textStyle="bold"
        android:text="Name:" />
         
         
         <ImageView
             android:id="@+id/pic"
             android:layout_width="80dip"
             android:layout_height="80dip"
             android:layout_alignRight="@+id/bar2"
             android:layout_alignTop="@+id/rc_name"
             android:scaleType="fitXY"
             android:src="@drawable/default_medium_profile_pic" />
         
         <TextView
        android:id="@+id/rc_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/rc_name"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:text="Gender:" />

    <TextView
        android:id="@+id/rc_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/rc_gender"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:text="Age:" />
                
        <ImageView
            android:id="@+id/bar2"
            android:layout_width="fill_parent"
            android:layout_height="5dip"
            android:layout_below="@+id/rc_age"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
    		android:background="@drawable/bar" />
        
        <TextView
            android:id="@+id/rc_s"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bar2"
            android:textSize="18sp"
            android:layout_marginTop="8dp"
            android:text="Source: " />
        
        <TextView
            android:id="@+id/rc_d"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rc_source"
	        android:textSize="18sp"
            android:layout_marginTop="35dp"
            android:text="Destination: " />
        
         <ImageView
            android:id="@+id/bar3"
            android:layout_width="fill_parent"
            android:layout_height="5dip"
            android:layout_below="@+id/rc_dest"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="35dp"
    		android:background="@drawable/bar" />
         
          <TextView
            android:id="@+id/rc_typ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bar3"
            android:layout_marginTop="8dp"
            android:textSize="18sp"
            android:text="Type of Vehicle: " />
        
         <TextView
            android:id="@+id/rc_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
	        android:textSize="20sp"
	        android:textStyle="bold"
            android:ems="10"
            android:layout_alignBaseline="@+id/rc_typ"
            android:layout_alignBottom="@+id/rc_typ"
            android:layout_toRightOf="@+id/rc_typ"
            android:text="" />
         
         
          <TextView
            android:id="@+id/rc_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rc_type"
            android:layout_marginTop="26dp"
            android:textSize="18sp"
            android:text="No. of people in ride: " />
        
         <TextView
            android:id="@+id/rc_addp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
	        android:textSize="45sp"
	        android:textStyle="bold"
            android:ems="10"
            android:layout_alignBaseline="@+id/rc_add"
            android:layout_alignBottom="@+id/rc_add"
            android:layout_toRightOf="@+id/rc_add"
            android:text="" />
         
         <TextView
            android:id="@+id/rc_add2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rc_add"
            android:layout_marginTop="26dp"
            android:textSize="18sp"
            android:text="Maximum commuters: " />
        
         <TextView
             android:id="@+id/rc_addp2"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_alignBottom="@+id/rc_add2"
             android:layout_below="@+id/rc_addp"
             android:layout_toRightOf="@+id/rc_add2"
             android:ems="10"
             android:text=""
             android:textSize="45sp"
             android:textStyle="bold" />

          <TextView
            android:id="@+id/rc_tim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rc_addp2"
            android:layout_marginTop="26dp"
            android:textSize="18sp"
            android:text="Time of travel: " />
        
         <TextView
            android:id="@+id/rc_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
	        android:textSize="20sp"
	        android:textStyle="bold"
            android:ems="10"
            android:layout_alignBaseline="@+id/rc_tim"
            android:layout_alignBottom="@+id/rc_tim"
            android:layout_toRightOf="@+id/rc_tim"
            android:text="" />
         
         <ImageView
            android:id="@+id/bar4"
            android:layout_width="fill_parent"
            android:layout_height="5dip"
            android:layout_below="@+id/rc_time"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="14dp"
    		android:background="@drawable/bar" />
         
         <LinearLayout 
             android:id="@+id/linearl"
   				android:layout_width="fill_parent"
    			android:layout_height="fill_parent"
            android:layout_below="@+id/bar4"
            android:layout_marginTop="14dp"
    			android:orientation="vertical" >
         
         </LinearLayout>
         
          <Button
            android:id="@+id/delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearl"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="3dp"
            android:drawableLeft="@drawable/delete"
            android:text="Delete this ride" 
            android:visibility="visible"/>

         <Button
            android:id="@+id/leave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearl"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="5dp"
            android:drawableLeft="@drawable/delete"
            android:text="Leave this ride" 
            android:visibility="gone"/>

         <TextView
             android:id="@+id/rc_source"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_alignParentLeft="true"
             android:layout_below="@+id/rc_s"
             android:ems="10"
             android:maxLines="5"
             android:singleLine="false"
             android:textSize="20sp"
             android:textStyle="bold" />

         <TextView
             android:id="@+id/rc_dest"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_alignParentLeft="true"
             android:layout_below="@+id/rc_d"
             android:ellipsize="end"
             android:ems="10"
             android:maxLines="5"
             android:singleLine="false"
             android:textSize="20sp"
             android:textStyle="bold" />


    </RelativeLayout>
    

</ScrollView>
