<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >


    <TextView
        android:id="@+id/Ridername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        android:textSize="17sp"
        android:text="Name:" />

    <TextView
        android:id="@+id/Ridergender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/Ridername"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        android:textSize="15sp"
        android:text="Gender:" />

    <TextView
        android:id="@+id/Riderage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/Ridergender"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        android:textSize="15sp"
        android:text="Age:" />

    <TextView
        android:id="@+id/Ridertp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/Riderage"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        android:textSize="15sp"
        android:text="Time Preference:" />
    
    <ImageView
            android:id="@+id/bar1"
            android:layout_width="fill_parent"
            android:layout_height="5dip"
        	android:layout_below="@+id/Ridertp"
        	android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
    		android:background="@drawable/bar" />

    <ImageView
        android:id="@+id/pic"
        android:scaleType="fitXY"
        android:layout_width="100dip"
        android:layout_height="100dip"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/default_medium_profile_pic" />

</RelativeLayout>
